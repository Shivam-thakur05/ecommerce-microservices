# =============================================================================
# MICROSERVICES ENVIRONMENT CONFIGURATION
# =============================================================================

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
NODE_ENV=development
PORT=3000
CORS_ORIGIN=http://localhost:3000
LOG_LEVEL=info

# =============================================================================
# DATABASE CONFIGURATIONS
# =============================================================================

# PostgreSQL Configuration
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=microservices_db
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_postgres_password
POSTGRES_SSL=false
POSTGRES_MAX_CONNECTIONS=20
POSTGRES_IDLE_TIMEOUT=30000
POSTGRES_CONNECTION_TIMEOUT=2000

# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/microservices_db
MONGODB_USER=your_mongodb_user
MONGODB_PASSWORD=your_mongodb_password
MONGODB_AUTH_SOURCE=admin
MONGODB_MAX_POOL_SIZE=10
MONGODB_MIN_POOL_SIZE=1

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password
REDIS_DB=0
REDIS_MAX_CLIENTS=30
REDIS_RETRY_DELAY=1000
REDIS_MAX_RETRIES=3

# RabbitMQ Configuration
RABBITMQ_HOST=localhost
RABBITMQ_PORT=5672
RABBITMQ_USER=guest
RABBITMQ_PASSWORD=guest
RABBITMQ_VHOST=/
RABBITMQ_HEARTBEAT=60
RABBITMQ_CHANNEL_MAX=0

# =============================================================================
# JWT & AUTHENTICATION
# =============================================================================
JWT_SECRET=your_super_secret_jwt_key_here_make_it_long_and_random
JWT_ACCESS_TOKEN_EXPIRY=15m
JWT_REFRESH_TOKEN_EXPIRY=7d
JWT_ISSUER=microservices-auth
JWT_AUDIENCE=microservices-api

# =============================================================================
# SERVICE PORTS
# =============================================================================
USER_SERVICE_PORT=3001
PRODUCT_SERVICE_PORT=3002
ORDER_SERVICE_PORT=3003
NOTIFICATION_SERVICE_PORT=3004
PAYMENT_SERVICE_PORT=3005
ANALYTICS_SERVICE_PORT=3006
API_GATEWAY_PORT=3000

# =============================================================================
# EXTERNAL SERVICES
# =============================================================================

# Email Service (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_email_app_password
SMTP_SECURE=false
SMTP_FROM=noreply@yourdomain.com

# SMS Service (Twilio)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# Firebase Configuration
FIREBASE_PROJECT_ID=your_firebase_project_id
FIREBASE_PRIVATE_KEY_ID=your_firebase_private_key_id
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYour Firebase Private Key Here\n-----END PRIVATE KEY-----\n"
FIREBASE_CLIENT_EMAIL=firebase-adminsdk-xxxxx@your-project.iam.gserviceaccount.com
FIREBASE_CLIENT_ID=your_firebase_client_id
FIREBASE_AUTH_URI=https://accounts.google.com/o/oauth2/auth
FIREBASE_TOKEN_URI=https://oauth2.googleapis.com/token
FIREBASE_AUTH_PROVIDER_X509_CERT_URL=https://www.googleapis.com/oauth2/v1/certs
FIREBASE_CLIENT_X509_CERT_URL=https://www.googleapis.com/robot/v1/metadata/x509/firebase-adminsdk-xxxxx%40your-project.iam.gserviceaccount.com

# Payment Gateway (Stripe)
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_stripe_webhook_secret

# AWS Configuration
AWS_ACCESS_KEY_ID=your_aws_access_key_id
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key
AWS_REGION=us-east-1
AWS_S3_BUCKET=your-s3-bucket-name
AWS_SES_REGION=us-east-1

# =============================================================================
# MONITORING & OBSERVABILITY
# =============================================================================

# Prometheus Configuration
PROMETHEUS_PORT=9090
PROMETHEUS_PATH=/metrics

# Jaeger Tracing
JAEGER_HOST=localhost
JAEGER_PORT=6831
JAEGER_SERVICE_NAME=microservices

# Elasticsearch (for logging)
ELASTICSEARCH_HOST=localhost
ELASTICSEARCH_PORT=9200
ELASTICSEARCH_USERNAME=elastic
ELASTICSEARCH_PASSWORD=your_elasticsearch_password
ELASTICSEARCH_INDEX_PREFIX=microservices

# =============================================================================
# RATE LIMITING
# =============================================================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_SKIP_SUCCESSFUL_REQUESTS=false
RATE_LIMIT_SKIP_FAILED_REQUESTS=false

# =============================================================================
# CACHE CONFIGURATION
# =============================================================================
CACHE_TTL=3600
CACHE_MAX_SIZE=1000
CACHE_CHECK_PERIOD=600

# =============================================================================
# SECURITY
# =============================================================================
BCRYPT_ROUNDS=12
PASSWORD_MIN_LENGTH=8
PASSWORD_MAX_LENGTH=128
SESSION_SECRET=your_session_secret_key_here
COOKIE_SECRET=your_cookie_secret_key_here

# =============================================================================
# FEATURE FLAGS
# =============================================================================
ENABLE_SWAGGER=true
ENABLE_METRICS=true
ENABLE_TRACING=true
ENABLE_CACHING=true
ENABLE_RATE_LIMITING=true
ENABLE_COMPRESSION=true
ENABLE_LOGGING=true

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================
DEBUG=true
VERBOSE_LOGGING=true
ENABLE_HOT_RELOAD=true
ENABLE_SOURCE_MAPS=true

# =============================================================================
# TESTING
# =============================================================================
TEST_DATABASE_URL=postgresql://test_user:test_password@localhost:5432/test_db
TEST_MONGODB_URI=mongodb://localhost:27017/test_db
TEST_REDIS_URL=redis://localhost:6379/1

# =============================================================================
# DEPLOYMENT
# =============================================================================
DOCKER_REGISTRY=your-docker-registry.com
KUBERNETES_NAMESPACE=microservices
HEALTH_CHECK_INTERVAL=30000
READINESS_TIMEOUT=5000
LIVENESS_TIMEOUT=5000 