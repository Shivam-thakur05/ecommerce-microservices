{
  "name": "microservices-project",
  "version": "1.0.0",
  "description": "Microservices architecture with PostgreSQL and MongoDB",
  "private": true,
  "workspaces": [
    "services/*",
    "shared/*",
    "api-gateway"
  ],
  "scripts": {
    "install:all": "npm install && npm run install:services && npm run install:shared && npm run install:gateway",
    "install:services": "npm install --workspace=services/*",
    "install:shared": "npm install --workspace=shared/*",
    "install:gateway": "npm install --workspace=api-gateway",
    "dev": "concurrently \"npm run dev:services\" \"npm run dev:gateway\"",
    "dev:services": "concurrently \"npm run dev --workspace=services/user-service\" \"npm run dev --workspace=services/product-service\" \"npm run dev --workspace=services/order-service\" \"npm run dev --workspace=services/notification-service\" \"npm run dev --workspace=services/payment-service\" \"npm run dev --workspace=services/analytics-service\"",
    "dev:gateway": "npm run dev --workspace=api-gateway",
    "build": "npm run build:services && npm run build:gateway",
    "build:services": "npm run build --workspace=services/*",
    "build:gateway": "npm run build --workspace=api-gateway",
    "test": "npm run test:services && npm run test:gateway",
    "test:services": "npm run test --workspace=services/*",
    "test:gateway": "npm run test --workspace=api-gateway",
    "lint": "npm run lint:services && npm run lint:gateway",
    "lint:services": "npm run lint --workspace=services/*",
    "lint:gateway": "npm run lint --workspace=api-gateway",
    "docker:build": "docker-compose build",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "k8s:deploy": "kubectl apply -f infrastructure/kubernetes/manifests/",
    "k8s:delete": "kubectl delete -f infrastructure/kubernetes/manifests/"
  },
  "devDependencies": {
    "@types/amqplib": "^0.10.4",
    "@types/aws-sdk": "^2.7.0",
    "@types/bcryptjs": "^2.4.6",
    "@types/bull": "^4.10.0",
    "@types/compression": "^1.7.5",
    "@types/connect-redis": "^0.0.20",
    "@types/express": "^4.17.21",
    "@types/express-session": "^1.17.10",
    "@types/ioredis": "^5.0.0",
    "@types/jaeger-client": "^3.18.0",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/lodash": "^4.14.202",
    "@types/moment": "^2.13.0",
    "@types/morgan": "^1.9.9",
    "@types/multer": "^1.4.11",
    "@types/node": "^20.19.9",
    "@types/node-cron": "^3.0.11",
    "@types/nodemailer": "^6.4.14",
    "@types/oauth2-server": "^3.0.9",
    "@types/passport": "^1.0.16",
    "@types/passport-jwt": "^4.0.1",
    "@types/passport-local": "^1.0.38",
    "@types/pg": "^8.10.9",
    "@types/stripe": "^8.0.417",
    "@types/twilio": "^3.19.3",
    "@types/uuid": "^9.0.7",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "concurrently": "^8.0.0",
    "eslint": "^8.0.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "prettier": "^3.0.0",
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "keywords": [
    "microservices",
    "nodejs",
    "typescript",
    "postgresql",
    "mongodb",
    "docker",
    "kubernetes"
  ],
  "author": "Bambam",
  "license": "MIT",
  "dependencies": {
    "ajv": "^8.12.0",
    "ajv-formats": "^2.1.1",
    "ajv-keywords": "^5.1.0",
    "amqplib": "^0.10.3",
    "aws-sdk": "^2.1490.0",
    "bcryptjs": "^2.4.3",
